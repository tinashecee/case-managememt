
  <div class="container-fluid pt-3">
    <h3 class="">Law Firms Summary&nbsp;</h3>
    <div class="row mt-3 mb-4 mx-0 removable">
      <div class="card-group w-100">
        <div class="card border shadow-none">
          <div class="card-body">
            <div class="row">
              <div class="col d-flex align-items-center">
                <h5 class="card-title text-uppercase text-muted mb-0">
                  Total Law firms
                </h5>
                <span
                  class="badge badge-secondary border ml-2 text-md font-weight-bold mb-0"
                  >+ <%= data.length %></span
                >
              </div>
            </div>
            <p class="mt-2 text-dark font-weight-700 display-3 mb-0"><%= data.length %></p>
          </div>
        </div>
        <div class="card border shadow-none">
          <div class="card-body">
            <div class="row">
              <div class="col d-flex align-items-center">
                <h5 class="card-title text-uppercase text-muted mb-0">
                  active law firms
                </h5>
                <span
                  class="badge badge-secondary border ml-2 text-md font-weight-bold mb-0"
                  ><%= active %></span
                >
              </div>
            </div>
            <p class="mt-2 text-dark font-weight-700 display-3 mb-0"><%= active %></p>
          </div>
        </div>
        <div class="card border shadow-none">
          <div class="card-body">
            <div class="row">
              <div class="col d-flex align-items-center">
                <h5 class="card-title text-uppercase text-muted mb-0">
                  inactive law firms
                </h5>
                <span
                  class="badge badge-secondary border ml-2 text-md font-weight-bold mb-0"
                  >+ <%= not_active %></span
                >
              </div>
            </div>
            <p class="mt-2 text-dark font-weight-700 display-3 mb-0"><%= not_active %></p>
          </div>
        </div>
       
      </div>
    </div>
    <div class="row removable">
      <div class="col-lg-12">
        <div class="row removable">
          <div class="col-lg-8">
            <div class="row removable">
              <div class="col-lg-6">
                <button
                  type="button"
                  class="btn btn-primary"
                  data-toggle="modal"
                  data-target="#exampleModal"
                >
                  Add Law Firm
                </button>
                <a
                type="button"
                class="btn btn-primary"
                href="/download3"
                  >
                  <font style="vertical-align: inherit">
                    <font style="vertical-align: inherit">Export/Download</font>
                  </font>
                </a>
                <div
                  class="modal fade"
                  id="exampleModal"
                  tabindex="-1"
                  aria-labelledby="exampleModalLabel"
                  style="display: none"
                  aria-hidden="true"
                >
                  <div
                    class="modal-dialog modal-dialog-centered"
                    role="document"
                  >
                    <div class="modal-content">
                      <form action="/add-lawfirm" method="POST">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">
                          Add Law Firm
                        </h5>
                        <button
                          type="button"
                          class="close"
                          data-dismiss="modal"
                          aria-label="Close"
                        >
                          <span aria-hidden="true">X</span>
                        </button>
                       
                      </div>
                      <div class="modal-body">
                        
                          <div class="mb-3">
                            <label for="law-firm" class="form-label"
                              >Law Firm</label
                            >
                            <input
                              type="text"
                              class="form-control"
                              id="law-firm"
                              name="law_firm"
                              required
                            />
                          </div>
                          <div class="mb-3">
                            <label for="address" class="form-label"
                              >Address</label
                            >
                            <input
                              type="text"
                              class="form-control"
                              id="address"
                              name="address"
                              required
                            />
                          </div>
                          <div class="mb-3">
                            <label for="vat-number" class="form-label"
                              >VAT Number</label
                            >
                            <input
                              type="text"
                              class="form-control"
                              id="vat-number"
                              name="vat_number"
                            />
                          </div>
                          
                          <div class="mb-3">
                            <label for="phone_number" class="form-label"
                              >Phone Number</label
                            >
                            <input
                              type="tel"
                              class="form-control"
                              id="phone_number"
                              name="phone_number"
                              required
                            />
                          </div>
                          <div class="mb-3">
                            <label for="website" class="form-label"
                              >Website</label
                            >
                            <input
                              type="text"
                              class="form-control"
                              id="website"
                              name="website"
                              required
                            />
                          </div>
                          <div class="mb-3">
                            <label for="email" class="form-label"
                              >Email Address</label
                            >
                            <input
                              type="email"
                              class="form-control"
                              id="email"
                              name="email"
                              required
                            />
                          </div>
                          <div class="mb-3">
                            <label for="contact_person" class="form-label">Contact Person</label>
                            <div id="contact-container">
                              <div class="contact-input">
                                <div class="row mb-3">
                                <div class="col-md-6">
                                <label for="name1">Name:</label>
                                <input type="text"  class="form-control" name="name1" required>
                              </div>
                              <div class="col-md-6">
                                <label for="email1">Email:</label>
                                <input type="email"  class="form-control" name="email1" required>
                              </div>
                              </div>
                              <div class="row mb-3">
                              <div class="col-md-6">
                                <label for="position1">Position:</label>
                                <input type="text"  class="form-control" name="position1" required>
                              </div>
                              <div class="col-md-6">
                                <label for="phone1">Phone:</label>
                                <input type="tel"  class="form-control" name="phone1" required>
                              </div>
                              </div>
                                <div class="row">
                                  <div class="col-md-6"><button type="button" style="width: 50%;" onclick="addContact()">+</button></div>
                                
                                </div>
                              </div>
                            </div>
                          </div>
                      </div>
                      <div class="modal-footer">
                        <button
                          type="button"
                          class="btn btn-secondary"
                          data-dismiss="modal"
                        >
                          Close
                        </button>
                        <button type="submit" class="btn btn-primary">
                          Submit
                        </button>
                      </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-6"></div>
            </div>
          </div>
          <div class="col-lg-4"></div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header border-0">
        <div class="row align-items-center">
          <div class="col">
            <div class="form-group mb-0">
              <div class="input-group">
                <input
                  class="form-control"
                  placeholder="Search"
                  id="searchInput"
                  type="text"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table align-items-center table-flush">
          <thead class="thead-light">
            <tr>
              <th scope="col">&nbsp; &nbsp; &nbsp; &nbsp; No.</th>
              <th scope="col">law Firm</th>
              <th scope="col">Primary Email&nbsp;</th>
              <th scope="col">Phones</th>
              <th scope="col">Date Created</th>
            </tr>
          </thead>
          <tbody id="resultsContainer">
            <% if (data.length > 0) { %>
              <% for (let dat of data) { %>
            <tr class="car">
              <th scope="row">
                <div class="d-flex align-items-center">
                
                  <span>&nbsp; &nbsp; &nbsp; &nbsp;<%= dat.law_firm_id %></span>
                </div>
              </th>
              <td><span><a class="car-title" href='/lawfirm_view?id=<%= dat.law_firm_id %>'><%= dat.name %></a></span>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <span class="ml-2 car-title" ><%= dat.email %></span>
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <span class="ml-2"><%= dat.phone_number %></span>
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <span class="ml-2"><%= moment(dat.date_created).format('Do MMMM, YYYY') %></span>
                </div>
              </td>
             
            </tr>
            <% } %>
            <% } %>
          
          </tbody>
        </table>
      </div>
    </div>
    
  </div>
