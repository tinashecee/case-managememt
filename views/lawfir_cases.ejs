<div class="container-fluid pt-3">
  <%  for (let error of errors) { %>
    <div class="alert alert-danger" role="alert">
    <%= error.message %>
   </div>
     <% } %>
     <% if(message.success){ %>
       <div class="alert alert-success"  role="alert">
           <%= message.success %>
       </div>
       <% } %>
    <div class="row removable">
        <div class="col-lg-4">
            <div class="card">
              <div class="card-header border-0 pb-0">
                <h1 class="mb-0"><%= data[0].name %></h1>
              </div>
              <div class="card-body pt-0 pb-2 px-0">
                <div
                  class="border-bottom border-top d-flex align-items-center justify-content-between px-4 py-2"
                >
                  <div class="d-flex align-items-center">
                    <i class="fa text-primary text-lg fa-user"></i>
                    <div class="ml-3">
                      <h3 class="mb-0">Profile</h3>
                    </div>
                  </div>
                  <a href='/lawfirm_view?id=<%= law_firm_id %>'
                    ><i class="fa fa-edit"></i
                  ></a>
                </div>
                <div class="card-body pt-0 pb-2 px-0">
                  <div
                    class="border-bottom border-top d-flex align-items-center justify-content-between px-4 py-2"
                  >
                    <div class="d-flex align-items-center">
                      <i class="fa text-primary text-lg fa-users"></i>
                      <div class="ml-3">
                        <h3 class="mb-0">Contacts</h3>
                      </div>
                    </div>
                    <a href='/lawfirm_contacts?id=<%= law_firm_id %>'
                      ><i class="fa fa-edit"></i
                    ></a>
                  </div>
                  <div
                    class="border-bottom d-flex align-items-center justify-content-between px-4 py-2"
                  >
                    <div class="d-flex align-items-center">
                      <i class="fa fa-map-marker text-primary text-lg"></i>
                      <div class="ml-3">
                        <h3 class="mb-0">Statement</h3>
                      </div>
                    </div>
                    <a href='/lawfirm_statement?id=<%= law_firm_id %>'
                      ><i class="fa fa-edit"></i
                    ></a>
                  </div>
                  <div
                    class="d-flex align-items-center justify-content-between px-4 py-2"
                  >
                    <div class="d-flex align-items-center">
                      <i class="fa fa-star text-primary text-lg"></i>
                      <div class="ml-3">
                        <h3 class="mb-0">Fee Notes</h3>
                      </div>
                    </div>
                    <a href="javascript:;"
                      ><i class="fa fa-edit"></i
                    ></a>
                  </div>
                  <div class="card-body pt-0 pb-2 px-0">
                    <div class="card-body pt-0 pb-2 px-0">
                      <div
                        class="border-bottom border-top d-flex align-items-center justify-content-between px-4 py-2"
                      >
                        <div class="d-flex align-items-center">
                          <i class="fa text-primary text-lg fa-file"></i>
                          <div class="ml-3">
                            <h3 class="mb-0">Cases</h3>
                          </div>
                        </div>
                        <a href='/lawfirm_cases?id=<%= law_firm_id %>'
                          ><i class="fa fa-edit"></i
                        ></a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <div class="col-lg-8">
            <div class="card">
                <div class="row align-items-center">
                    <div class="col text-right">
                        <a href="#" class="btn btn-sm btn-neutral btn-round btn-icon" data-toggle="tooltip" data-original-title="Add New Asset Type">
                            <span class="btn-inner--icon"><i class="fas fa-plus"></i></span>
                            <span class="btn-inner--text">Add New</span>
                        </a>
                        <a href="#" class="btn btn-sm btn-neutral btn-round btn-icon" data-toggle="tooltip" data-original-title="Export list">
                            <span class="btn-inner--icon"><i class="fas fa-upload"></i></span>
                            <span class="btn-inner--text">Export</span>
                        </a>
                        <a href="#" class="btn btn-sm btn-neutral btn-round btn-icon" data-toggle="tooltip" data-original-title="Import Asset">
                            <span class="btn-inner--icon"><i class="fas fa-download"></i></span>
                            <span class="btn-inner--text">Import</span>
                        </a>
                        <a href="#" class="btn btn-sm btn-neutral btn-round btn-icon" data-toggle="tooltip" data-original-title="Print list">
                            <span class="btn-inner--icon"><i class="fas fa-print"></i></span>
                            <span class="btn-inner--text">Print</span>
                        </a>
                    </div>

                    <div class="col text-left">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Search" id="search-input">
                            <button class="btn btn-primary" type="button" id="search-btn">Search</button>
                        </div>


                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Case #</th>
                                <th scope="col">Law Firm</th>
                                <th scope="col">Start Date</th>
                                <th scope="col">Deadline</th>
                                <th scope="col">Members</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let dat of cases) { %>
                            <tr>
                                <th scope="row">
                                    <%= dat.case_id %>
                                </th>
                                <td>In House&nbsp;</td>
                                <td>
                                    <%= moment(dat.start_date).format('Do MMMM, YYYY') %></td>
                                <td>
                                    <%= moment(dat.end_date).format('Do MMMM, YYYY') %></td>
                                <td>
                                    1</td>
                            </tr>
                       <% } %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>